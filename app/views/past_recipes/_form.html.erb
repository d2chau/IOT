<%= form_for(@past_recipe) do |f| %>
  <% if @past_recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@past_recipe.errors.count, "error") %> prohibited this past_recipe from being saved:</h2>

      <ul>
      <% @past_recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br>
